---
import Button from "../ui/button/Button.astro";
import { projects } from "../../data/projects";

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-10">
  <div class="mx-auto max-w-6xl md:px-4">
    {
      title && (
        <h2 class="text-3xl md:text-4xl font-semibold text-center mb-8 text-foreground">
          {title}
        </h2>
      )
    }

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {
        projects.map((p) => (
          <article class="card-surface p-6 relative flex flex-col justify-between">
            <div>
              <div
                class="absolute right-4 top-4 text-[var(--accent)] [&>svg]:w-6 [&>svg]:h-6"
                set:html={p.icon}
              />
              <h3 class="text-xl font-semibold text-foreground m-0">
                {p.title}
              </h3>
              <p class="text-sm text-[color:var(--color-text-muted)] m-0">
                {p.techStack}
              </p>
              <p class="mt-3 text-[color:var(--color-text-secondary)]">
                {p.description}
              </p>
            </div>
            <div class="mt-6 flex justify-center gap-2">
              {p.cta.map((item) => (
                <Button
                  href={item.link}
                  target="_blank"
                  variant="primary"
                  size="sm"
                >
                  {item.text}
                </Button>
              ))}
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
